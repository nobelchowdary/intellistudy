{
  "manifest_version": 3,
  "name": "IntelliStudy - Your Private AI Research Agent",
  "version": "0.1",
  "description": "Summarizes, translates, and answers questions about web pages and PDFs, all on-device.",
  "permissions": [
    "activeTab",
    "sidePanel",
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open IntelliStudy"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "pdfjs/pdf.worker.min.mjs"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}